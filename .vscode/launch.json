  "version": "1.0.0",
  "configurations": [
    {
      "name": "Node Debug",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--lazy"],
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceRoot}/index.js",
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal"
    }
  ]
}
